# Kurumsal Prosedür Asistanı (KPA) - Environment Variables

# Google Gemini API Key (Required)
GEMINI_API_KEY=your-gemini-api-key-here

# Database Configuration
MONGO_URL=mongodb://admin:kpa_admin_2024@mongodb:27017/kpa_production?authSource=admin
DB_NAME=kpa_production

# Backend Configuration  
DEBUG=false
ENVIRONMENT=production
SECRET_KEY=your-32-character-secret-key-here

# Frontend Configuration
REACT_APP_BACKEND_URL=http://localhost:8001/api
REACT_APP_ENV=production

# Docker Compose Override (Optional)
COMPOSE_PROJECT_NAME=kpa

# MongoDB Admin Credentials (Docker)
MONGO_ADMIN_USER=admin
MONGO_ADMIN_PASSWORD=kpa_admin_2024

# Backup Configuration (Optional)
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=kpa-backups

# Monitoring (Optional)
MONITORING_ENABLED=false
SENTRY_DSN=your-sentry-dsn-here

# Rate Limiting (Production)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# SSL Configuration (Production)
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/kpa.crt
SSL_KEY_PATH=/etc/ssl/private/kpa.key

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/kpa/app.log